{
	"$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": ["**/*.ts", "**/*.tsx"],
		"ignore": ["node_modules/**", "dist/**", "client/src/**"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 150
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "double",
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noChildrenProp": "off"
			},
			"style": {
				"useNodejsImportProtocol": "off",
				"useImportType": "off",
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noConsoleLog": "error",
				"noExplicitAny": "off",
				"noConfusingVoidType": "off",
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"all": false
			}
		}
	}
}
